{% extends 'base.html.twig' %}
{% block title %}Liste Episodes {% endblock %}
{% block body %}
    <link rel="stylesheet" href="{{ asset('css/BoxEpisodes.css') }}">
        <div class="container">
            <div class="row">
{% for episodes in episode %}


            <a href="{{ path('Episode', {'id': episodes.id}) }}">
            <div style="background: lightgray" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="box">
                    <div class="info">
                        <h4  class="col-xs-12 col-sm-12 col-md-12 col-lg-12">{{ episodes.titre }}</h4>
                        <img   src="{{ asset(episodes.photo) }}" class="img-responsive; col-sm-4" alt="Image" style="width: 15%; margin-bottom: 30px">
                        <p class="col-sm-8">{{ episodes.resumerCourt }}</p>
                    </div>
                </div>
            </div>
            </a>
{% endfor %}


            </div>
        </div>



{% endblock %}